<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.mailclient.LoginController" stylesheets="@style.css">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Label textAlignment="CENTER" fx:id="welcomeText"/>
    <TextField  fx:id="username" styleClass="loginRegisterInputs" maxWidth="300" promptText="Username"></TextField>
    <PasswordField fx:id="password" styleClass="loginRegisterInputs" maxWidth="300" promptText="Password"></PasswordField>
<!--    <TextField  fx:id="password" ></TextField>-->
    <HBox alignment="CENTER" spacing="100">

        <Button text="Login" onAction="#onLoginButtonClick"/>

        <Button text="Register new account" onAction="#onRegisterButtonClick"/>
    </HBox>

</VBox>
